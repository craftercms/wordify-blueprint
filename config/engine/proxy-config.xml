<proxy-config>
	<version>4.0.1</version>
	<servers>
		<server>
			<id>static-assets</id>
			<url></url>
			<patterns>
				<pattern>/static-assets/.*</pattern>
			</patterns>
		</server>
		<server>
			<id>graphql</id>
			<url></url>
			<patterns>
				<pattern>/api/1/site/graphql.*</pattern>
			</patterns>
		</server>
		<server>
			<id>engine</id>
			<url></url>
			<patterns>
				<pattern>/api/1/.*</pattern>
			</patterns>
		</server>
		<server>
			<id>catcher</id>
			<url>http://localhost:8080/studio/nothing</url>
			<patterns>
				<pattern>/sources/.*</pattern>
			</patterns>
		</server>
		<server>
			<id>preview</id>
			<url></url>
			<patterns>
				<pattern>.*</pattern>
			</patterns>
		</server>
	</servers>
</proxy-config>
